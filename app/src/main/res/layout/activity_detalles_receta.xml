                    android:id="@+id/tvNumeroProductos"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded_textview"
                    android:gravity="center"
                    android:text="666"
                    android:textColor="@color/white"
                    android:textSize="20sp"
