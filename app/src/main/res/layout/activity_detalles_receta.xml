                    app:layout_constraintEnd_toEndOf="@+id/ivDetalleReceta"
                    app:layout_constraintHorizontal_bias="0.753"
                    app:layout_constraintStart_toStartOf="@+id/ivDetalleReceta"
                    app:layout_constraintTop_toTopOf="@+id/ivDetalleReceta"
