<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/light_grey_superLight" />
            <gradient android:angle="-90" android:startColor="@color/light_grey_light" android:endColor="@color/light_grey_dark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#971E05" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/grey_superLight" />
            <gradient android:angle="-90" android:startColor="@color/grey_light" android:endColor="@color/grey_dark" />
            <!-- start = color más claro
                 end = color más oscuro
                 stroke = color muy claro
             -->
        </shape>
    </item>
</selector>