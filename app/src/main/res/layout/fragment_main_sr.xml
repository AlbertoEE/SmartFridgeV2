<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="net.ddns.smartfridge.smartfridgev2.vista.fragmentos.MainSr">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabReceta"
        android:layout_width="106dp"
        android:layout_height="87dp"
        android:layout_gravity="center|end"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:fab_colorNormal="@color/transparent"
            app:fab_icon="@drawable/ic_filtro"
            app:fab_size="normal"
            app:fab_title="Manual" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/aleatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:fab_colorNormal="@color/transparent"
            app:fab_icon="@drawable/ic_aleatorio"
            app:fab_size="normal"
            app:fab_title="Alimentos"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="233dp" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/miNevera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            app:fab_colorNormal="@color/transparent"
            app:fab_icon="@drawable/fridge"
            app:fab_size="normal"
            app:fab_title="Editar"
            tools:layout_editor_absoluteX="294dp"
            tools:layout_editor_absoluteY="233dp" />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</FrameLayout>
